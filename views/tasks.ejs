<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header h1 {
            margin: 0;
        }

        header nav {
            display: flex;
            gap: 20px;
        }

        nav{
            background-color: aqua;
            margin: 10px;
            padding: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .edit, .delete, .complete {
            padding: 8px 15px;
            cursor: pointer;
        }

        .edit {
            background-color: #4CAF50;
            color: white;
        }

        .delete {
            background-color: #f44336;
            color: white;
        }

        .complete {
            background-color: #008CBA;
            color: white;
        }

    </style>
</head>
<body>

    <header>
        <a href="/Index.html" style="text-decoration: none; color: white;">
            <h1>ToDoList</h1>
        <nav>
            <a href="/views/tasks.ejs">Tasks</a>
            <a href="/logout">Logout</a>
        </nav>
    </header>


    <table>
        <thead>
            <tr>
                <th>Task Name</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
            <tbody>
                <% tasks.forEach(task => { %>
                    <tr>
                        <td><%= task.Tasktitle %></td>
                        <td><%= task.TaskDescription %></td>
                        <td class="actions">
                            <a href="/views/EditForm.ejs?title=<%= task.Tasktitle %>&description=<%= task.TaskDescription %>" class="edit">Edit</a>
                            <a href="/deleteTask?title=<%= task.Tasktitle %>&description=<%= task.TaskDescription %>" class="delete">Delete</a>
                            <a href="/completeTask?title=<%= task.Tasktitle %>&description=<%= task.TaskDescription %>" class="complete">Complete</a>
                        </td>
                    </tr>
                <% }); %>
    
            </tbody>
    </table>
</body>
</html>
